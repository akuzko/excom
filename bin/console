#!/usr/bin/env ruby

require "bundler/setup"
require "excom"

class Command < Excom::Command
  use :sentry, class: 'MySentry'
  use :assertions
  use :caching

  args :foo
  opts :bar, :baz

  def foo
    super || 6
  end

  def run
    result success: foo * 2
    assert { foo > bar }
  end
end

class MySentry < Excom::Sentry
  deny_with :unauthorized

  def execute?
    command.foo != 5
  end

  deny_with :unprocessable_entity do
    def bar?
      command.bar && command.bar > 0
    end
  end
end

require "pry"
Pry.start
