#!/usr/bin/env ruby

require "bundler/setup"
require "excom"

class Show < Excom::Service
  use :caching
  use :dry_types

  attribute :foo, Dry::Types['integer']

  def execute!
    {foo: foo}
  end
end

class Abilities < Excom::Service
  use :abilities

  opts :foo, :bar, :threshold

  deny_with :unauthorized do
    def save?
      foo != 6
    end
  end

  deny_with :unprocessable_entity do
    def save?
      foo != 7
    end

    def bar?
      bar && bar > threshold
    end
  end
end

class Save < Excom::Service
  use :status
  use :assertions

  args :foo
  opts :bar

  def foo
    super || 6
  end

  def execute!
    result { foo * 2 }
    assert { foo > bar }
  end

  private def abilities
    @abilities ||= Abilities.new(foo: foo, bar: bar, threshold: 0)
  end
end

require "pry"
Pry.start
